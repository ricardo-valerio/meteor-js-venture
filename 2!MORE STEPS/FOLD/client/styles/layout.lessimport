    opacity: 1.0;
  }

  &.editing {
    height: ~"calc(100% - 125px)";
    z-index: 100;
  }
}


@minimap-right-buffer: 6px;
@minimap-bottom-buffer: 6px;
@minimap-top-buffer: 20px;
@minimap-padding: 6px;
@minimap-max-height: calc(100% ~"-" @horizontal-context-top ~"-" @horizontal-context-margin-top ~"-" @horizontal-content-height ~"-" @remix-bar-height ~"-" @minimap-bottom-buffer ~"-" @minimap-top-buffer ~"-" 2*@minimap-padding);

div.minimap {
  .background-transition;
  position: fixed;
  overflow: hidden;
  right: @minimap-right-buffer;
  bottom: @minimap-bottom-buffer;
  max-height: @minimap-max-height;
  padding: @minimap-padding;

  .expand {
    .opacity-transition;
    position: absolute;
    top: 6px;
    right: 6px;
    opacity: 1.0;
    background-color: #323232;
    width: 30px;
    height: 30px;
    font-size: 21px;
    border-radius: 3px;
    padding-top: 5px;
    padding-left: 6px;
    opacity: 0.0;
    color: white;
  }

  &.hoverable {
    cursor: pointer;
    &:hover {
      background-color: white;
      .expand {
        opacity: 1.0;
      }
    }
  }

  .section {
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;

    -ms-flex-align: center;
    -webkit-align-items: center;
    -webkit-box-align: center;
    align-items: center;

    @section-height: 17px;
    height: @section-height;
    margin-bottom: @section-height * 0.33333;

    &:last-child {
      margin-bottom: 0px !important;
    }

    &.selected-section {
      .selected-block {
        background-color: @action-color;
      }
    }    
  }

  .block {
    .background-transition;
    display: inline-block;
    background-color: @medium-color;
  }

  .vertical.block {
    height: 100%;
    width: 17px * 1.53333;
  }

  .horizontal.block {
    height: 76.47%;
    width: 17px * 0.7647 * 1.53333;
    margin-left: 3px;
  }
}

@border-left: calc(50% ~"-" 0.5px);
@border-bottom: 50%;


.mobile-minimap-vertical{
  position: fixed;
  z-index: 24;
  height: 300px;
  &:after {
    content:"";
    position: absolute;
    z-index: -1;
    top: 0;
    bottom: 0;
    left: @border-left;
    border-left: 1px solid @medium-color;
  }
}
.mobile-minimap-vertical-table{
  .size-to-fit;
  top: 0px;
  left: 0px;
  display:table;
}

.vertical-marker-row{
  display:table-row;
  height: 10px;
  margin: auto;
  width: 100%;
}

.vertical-marker-cell{
  display: table-cell;
  width: 100%;
  vertical-align: middle;
  text-align: center;
}

@marker-width: 9px;
@marker-height: 5px;

.vertical-marker{
  width: @marker-width;
  margin: auto;
  height: @marker-height;
  background-color: @medium-color;
  &.selected{
    background-color: @action-color;
  }
}

.mobile-minimap-horizontal{
  position: fixed;
  background-color: @background-color;
  bottom:0;
  right:0;
  z-index: 22;
  .box-shadow(0px -3px 8px 0px rgba(0,0,0,0.2));
  &:after {
    content:"";
    position: absolute;
    z-index: -1;
    left: 0;
    right: 0;
    bottom: @border-bottom;
    border-bottom: 1px solid @medium-color;
  }
}

.mobile-minimap-horizontal-table{
  .size-to-fit;
  display: table;
  bottom: 0px;
  right: 0px;
}


.horizontal-marker-row{
  height: 100%;
  display: table-row;
}

.horizontal-marker-cell{
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.horizontal-marker{
  width: @marker-width;
  margin: auto;
  height: @marker-height;
  background-color: @medium-color;
  &.selected{
    background-color: @action-color;
  }
}


.mobile-minimap-corner{
  position: fixed;
  z-index: 24;
  background-color: @background-color;
  bottom: 0;
  left: 0;
  &:before { // complete vertical line
    content:"";
    position: absolute;
    z-index: -1;
    left: @border-left;
    right: 0;
    top: 0;
    bottom: 0;
    border-left: 1px solid @medium-color;
  }
  &:after { // complete horizontal line
    content:"";
    position: absolute;
    z-index: -1;
    left: @border-left;
    right: 0;
    top: 0;
    bottom: @border-bottom;
    border-bottom: 1px solid @medium-color;
  }
}

.publish-overlay {
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(255,255,255,0.4);
  z-index: 999999999;
  vertical-align: middle;
}

.central-publish-modal{
  background-color: @dark-color;
  position: fixed;
  padding: @nonMobileNarrativeSectionPadding;
  width: 600px;
  max-width: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: @white-color;

  label {
    font-size: 14px;
  }

  input[type=text] {
    font-size: 15px;
  }

  input[type=file] {
    &::before {
      display: inline-block;
      background: @panel-color;
      color: @white-color;
    }
    &:hover::before {
      background-color: @action-color;
      color: @white-color;
    }
  }
  p{
    font-size: 12px;
  }
  input[type=text], input[type=file]{
    margin-bottom: 15px;
  }
  .cancel-publish{
    position: absolute;
    top: 4px;
    right: 4px;
    font-size: 20px;
  }
  .confirm-publish{
    float: right;
    //position: absolute;
    //bottom: @nonMobileNarrativeSectionPadding;
    //right: @nonMobileNarrativeSectionPadding;
    background: @panel-color;
    color: @white-color;
    line-height: 35px;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 14px;
    padding-right: 14px;
    &:hover {
      background-color: @action-color;
      color: @white-color;
    }
  }
}

.signin-overlay{
  z-index: 99999;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(255,255,255,0.8);
  .close{
    float: right;
    background-color: rgba(0,0,0,0);
    font-size: 22px;
    margin-right: 10px;
    margin-top: 10px;
    color: @black-color;
  }
  .signin-buttons{
    margin:auto;
    display:block;
    text-align: center;
    position: absolute;
    height: 20%;
    font-family: Muli, sans-serif;

    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    li{
      background-color: @remix-color;
      &:hover{
        background-color: @black-color;
      }
      color: @white-color;
      margin-top: 10px;
      width: 200px;
      height: 45px;

      button{
        .size-to-fit;
      }
    }
  }
}

.mobile-progress-header{
  text-align: center;
  position: absolute;
  width: 100%;
  background-color: rgba(50,50,50,0.6);
  color: @medium-color;
  z-index: 1000;
}

.mobile-context-back-button{
  @size: 38px;
  @bottom-margin: 20px;
  float:right;
  .size(@size);
  padding: 0;
  position: relative;
  margin-right: 0px;
  margin-top: -1 * @size - @bottom-margin;
}

div.tagsinput {
  font-family: Muli;
  font-size: 15px;
  border:1px solid #CCC;
  background: #FFF;
  padding:5px;
  overflow-y: auto;
}

div.tagsinput span.tag {
  display: block;
  float: left;
  padding: 5px;
  padding-left: 10px;
  padding-right: 10px;
  text-decoration:none;
  background: @action-color;
  color: @white-color;
  margin-right: 8px;
  margin-bottom:5px;
}

div.tagsinput span.tag a {
  opacity: .8;
}

div.tagsinput input {
  width:80px;
  margin:0px;
  border:1px solid transparent;
  padding:5px;
  background: transparent;
  color: #000;
  outline:0px;
  margin-right:5px;
  margin-bottom:5px;
}

div.tagsinput div {
  display:block;
  float: left;
}

.tags_clear {
  clear: both;
  width: 100%;
  height: 0px;
}

.not_valid {background: #FBD8DB !important;
  color: #90111A !important;}

.pull-right {
  float: right;
}


div.inline-block {
  display: inline-block;
}

div.hide {
  visibility: hidden !important; // could also use left: -9999px. better than display:none because it still has a non-zero size
}

div.collapse {
  display: none !important;
}

div.loading-container {
  margin-top: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  &.header {
    margin-top: 6px;
    position: absolute;
    top: 20px;
    right: 195px;
  }
  i.loading-icon {
    z-index: 50;
  }
}

.loading-page{
  position: fixed;
  top: 0;
  left: 0;
  .centered-loading-icon{
    &::before{
      height: 47%;
      display: block;
      content: '';
    }
    .size-to-fit;
    text-align: center;
  }
}
